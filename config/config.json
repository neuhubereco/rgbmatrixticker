{
    "web_display_autostart": true,
    "schedule": {
        "enabled": false,
        "start_time": "07:00",
        "end_time": "23:00"
    },
    "timezone": "Europe/Berlin",
    "location": {
        "city": "Berlin",
        "state": "Berlin",
        "country": "DE"
    },
    "display": {
        "hardware": {
            "rows": 32,
            "cols": 64,
            "chain_length": 2,
            "parallel": 1,
            "brightness": 95,
            "hardware_mapping": "adafruit-hat-pwm",
            "scan_mode": 0,
            "pwm_bits": 9,
            "pwm_dither_bits": 1,
            "pwm_lsb_nanoseconds": 130,
            "disable_hardware_pulsing": false,
            "inverse_colors": false,
            "show_refresh_rate": false,
            "limit_refresh_rate_hz": 120
        },
        "runtime": {
            "gpio_slowdown": 3
        },
        "display_durations": {
            "clock": 15,
            "stocks": 30,
            "crypto": 30,
            "news_manager": 60
        },
        "use_short_date_format": true
    },
    "clock": {
        "enabled": true,
        "format": "%H:%M",
        "update_interval": 1
    },
    "stocks": {
        "enabled": true,
        "update_interval": 600,
        "scroll_speed": 1,
        "scroll_delay": 0.01,
        "toggle_chart": false,
        "dynamic_duration": true,
        "min_duration": 30,
        "max_duration": 300,
        "duration_buffer": 0.1,
        "symbols": [],
        "display_format": "{symbol}: ${price} ({change}%)"
    },
    "crypto": {
        "enabled": true,
        "update_interval": 600,
        "symbols": [],
        "display_format": "{symbol}: ${price} ({change}%)"
    },
    "news_manager": {
        "enabled": true,
        "update_interval": 300,
        "scroll_speed": 1,
        "scroll_delay": 0.01,
        "headlines_per_feed": 2,
        "enabled_feeds": [],
        "custom_feeds": {},
        "rotation_enabled": true,
        "rotation_threshold": 3,
        "dynamic_duration": true,
        "min_duration": 30,
        "max_duration": 300,
        "duration_buffer": 0.1,
        "font_size": 8,
        "font_path": "assets/fonts/PressStart2P-Regular.ttf",
        "text_color": [255, 255, 255],
        "separator_color": [255, 0, 0]
    }
}
